{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@domain": ["domain/src/index.ts"],
      "@domain/*": ["domain/src/*"],
      "@application": ["application/src/index.ts"],
      "@application/*": ["application/src/*"],
      "@infra-shared/*": ["infrastructure/shared/src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
